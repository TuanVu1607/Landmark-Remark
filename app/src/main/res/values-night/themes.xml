<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LandmarkRemark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- màu nền cửa sổ -->
        <item name="android:windowBackground">@color/common_window_background_color_dark</item>
        <!-- Màu chính của ứng dụng, được Thanh công cụ ActionBar sử dụng theo mặc định -->
        <item name="colorPrimary">@color/common_primary_color_dark</item>
        <!-- Màu tối chính của ứng dụng, được sử dụng theo mặc định cho thanh trạng thái -->
        <item name="colorPrimaryDark">@color/common_primary_color_dark</item>
        <!-- Màu nhấn của ứng dụng, màu này được sử dụng theo mặc định cho hiệu ứng lựa chọn của các điều khiển chung, chẳng hạn như CheckBox RadioButton Switch -->
        <item name="colorAccent">@color/common_accent_color</item>
        <!-- Màu phụ của ứng dụng -->
        <item name="colorSecondary">@color/common_accent_color</item>
        <!-- Màu văn bản mặc định, Nút, Màu văn bản TextView -->
        <item name="android:textColor">@color/common_text_color_dark</item>
        <!-- Màu lời nhắc mặc định, màu văn bản lời nhắc của Nút và Chế độ xem văn bản -->
        <item name="android:textColorHint">@color/common_text_hint_color</item>
        <!-- Màu của status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Đặt văn bản và biểu tượng thành màu trắng nếu là nền tối -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Đặt màu cho AppBar-->
        <item name="appBarLayoutStyle">@color/common_primary_color_dark</item>
    </style>
</resources>